<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:layout_above="@+id/adView_Container"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnInterstitial"
            android:layout_width="match_parent"
            android:text="Interstitial"
            android:layout_height="45dp" />

        <Button
            android:id="@+id/btnReloadBanner"
            android:layout_width="match_parent"
            android:text="Reload Banner"
            android:layout_height="45dp" />

        <FrameLayout
            android:id="@+id/adView_Container_Native"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:background="#F5F5F5"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/adView_Container"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:background="#F5F5F5"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>